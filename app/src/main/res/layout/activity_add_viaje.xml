<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddViajeActivity">

    <EditText
        android:id="@+id/edt_add_origen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:autofillHints="no"
        android:ems="10"
        android:hint="@string/origen"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_add_destino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:autofillHints="no"
        android:ems="10"
        android:hint="@string/destino"
        android:textColorHint="#757575"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_add_origen"
        app:layout_constraintStart_toStartOf="@+id/edt_add_origen"
        app:layout_constraintTop_toBottomOf="@+id/edt_add_origen"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/edt_add_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/precio"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_add_destino"
        android:autofillHints="no" />

    <Button
        android:id="@+id/bt_add_insertar_viaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/insertar_viaje"
        android:onClick="insertar_viaje"
        app:layout_constraintEnd_toEndOf="@+id/edt_add_precio"
        app:layout_constraintStart_toStartOf="@+id/edt_add_precio"
        app:layout_constraintTop_toBottomOf="@+id/edt_add_precio" />
</androidx.constraintlayout.widget.ConstraintLayout>